{% set params = {
    listencta:false,
}|merge(params|default({})) %}

{% set blocks = params.listencta %}
{% if blocks|length %}
    <div class="container mx-auto px-4 flex flex-col sm:grid sm:grid-cols-2 md:grid-cols-4 py-6 sm:py-8 md:py-12 lg:py-16">
        {% for block in blocks %}
            <a href="{{ block.platformUrl|raw }}"
               target="_blank"
               class="bg-primary hover:bg-secondary transition-colors ease-in-out duration-300 text-white py-2 px-1 text-center my-2 grow-1 sm:p-2 sm:mx-4 lg:mx-8 xl:mx-12 font-russo">{{ block.platformName }}</a>
        {% endfor %}
    </div>
{% endif %}