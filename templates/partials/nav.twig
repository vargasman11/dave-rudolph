{% set navigationItems = craft.entries.section('navigation').all() %}

<nav class="container mx-auto flex justify-between items-center p-4 md:py-8 xl:py-10">
    <a href="/" class="text-primary font-xball text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-shadow-2xs">Dave Rudolph</a>
    <button class="md:hidden">
        <svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-500">
            <use xlink:href="#bars" />
        </svg>
    </button>

    <ul class="hidden md:flex font-xball text-primary text-shadow-2xs">
        {% for item in navigationItems %}
            {% set isExternal = item.internalOrExternal %}
            {% set url = isExternal ? item.externalPage : item.entry.one().getUrl() %}
            {% set targetAttr = item.openInNewTab ? 'target="_blank"' : '' %}
            <li class="md:ml-2 lg:ml-4 lg:text-lg">
                <a class="hover:text-secondary transition-all delay-150 ease-in-out" href="{{ url }}" {{ targetAttr }}>{{ item.title }}</a>
            </li>
        {% endfor %}
    </ul>
</nav>