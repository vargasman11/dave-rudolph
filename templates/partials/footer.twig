<!-- Social icons row -->
<footer class="container mx-auto py-5" id="footer">
      <ul class="flex flex-row flex-wrap justify-center">
          {% set footerLinks = footerLink.footerLink.all() %}
          {% for footerLink in footerLinks %}
              <li class="m-1 border-2 py-1 px-2.5 border-teal-600 rounded-full hover:border-teal-400">
                  <a  class="text-teal-600 hover:text-teal-400"
                          href="{{ footerLink.socialUrl }}" target="_blank">
                      <i class="{{ footerLink.socialIcon.value }}"></i>
                  </a>
              </li>
          {% endfor %}
      </ul>
</footer>

