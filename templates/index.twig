<div class="container-fluid p-5">
    <div class="row">
        <div class="col-12 col-sm-10 col-md-8 mx-auto">
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                    {% set today = "now"|date("m/d/Y") %}
                    {# Fetch entries with a selected date in the next month #}
                    {% set start = now|atom %}
                    {% set entries = craft.entries().date(['and', ">= #{start}"]).all() %}
                    {% set entries = entries|multisort('date', direction=SORT_ASC) %}
                    {% if entries|length %}
                        {% for entry in entries %}
                            <tr>
                                <td><span class="text-muted font-weight-bold">{{entry.date|date('medium') }}</span></td>
                                <td>{{entry.title}} @ {{entry.time|time('short')}} </td>
                                <td><span class="text-muted font-weight-bold">Location:</span> {{entry.city}}, {{entry.state}}</td>
                                <td><a href="{{entry.infoUrl}}" class="btn btn-md btn-info" target="_blank">info</a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

