{# Asset Vars #}
{% set headerImage = entry.headerImage.one() ?? null %}
{% set transform = {
    small:{ mode: 'crop', format: 'webp', width: 640  },
    medium:{ mode: 'crop', format: 'webp', width: 768 },
    large:{ mode: 'crop', format: 'webp', width: 1024 }
} %}
{# Date Vars #}
{% set today = "now"|date("m/d/Y") %}
{# Fetch entries with a selected date in the next month #}
{% set start = now|atom %}
{# {% set start = "01/01/2023" %} #}
{% set end = now|atom %}

{% extends '_layout.twig' %}
{% block content %}
    {% include '_components/headerHome.twig' with { params:{
        headerImage: headerImage,
    }} %}
    {% include '_components/listenLinks.twig' with { params:{
        listencta: entry.listencta.all(),
    }} %}
    {# Tour Dates #}
    {{ sprig('_components/pagination', {
        params:{
            title:'Upcoming Dates',
            section:'tourDates',
            limit: 6,
            dateRange: [ ">= #{today} "]
        }
    }) }}

{% endblock %}