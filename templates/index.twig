{% set headerImage = entry.headerImage.one() ?? null %}
{% include "partials/header" %}
{% include "partials/nav" %}

<div class="container-xl pb-5 pt-3">
    <div class="row">
        <div class="col-sm-12">
            <img class="img-fluid" src="{{ headerImage.getUrl ?? '/img/jumbo-1.jpg' }}" alt="{{ headerImage.fileName ?? 'Dave Rudolph'}}" loading="lazy">
        </div>
    </div>
</div>

<div class="container-fluid p-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-center flex-wrap">
            {% set blocks = entry.listencta.all() %}
            {% if blocks|length %}
                {% for block in blocks %}
                    <a href="{{block.platformUrl|raw}}" target="_blank" class="btn btn-lg btn-info m-3">{{block.platformName}}</a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>


