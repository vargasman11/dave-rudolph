{% include "partials/header" %}
{% include "partials/nav" %}

{% if entry.headerImage|length  %}
<div class="container-fluid mt-5" id="music" style="background-image:url('{{entry.headerImage.one().getUrl()}}')">
    {% else %}
    <div class="container-fluid mt-5" id="music" style="background-image: url('/img/crowd-stock.jpeg');">
        {% endif %}
        <div class="row">
            <div class="col-sm-12">
                {% if entry.pageTitle %}
                    <p class="display-4 text-center page-header-title">{{entry.pageTitle}}</p>
                {% else %}
                    <p class="display-4 text-center page-header-title">MEDIA</p>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="container mt-4 py-5">
        <div class="row py-5">
            {% set blocks = entry.videos.all() %}
            {% if blocks|length %}
                {% for block in blocks %}
                    <div class="col-sm-12 col-md-6 col-lg-8 mx-auto my-4">
                        <h1 class="text-center py-3 xball">{{block.videoTitle}}</h1>
                        <div class="embed-responsive embed-responsive-21by9">
                            {{block.videoEmbed|raw}}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

        </div>
    </div>

{% include "partials/footer" %}