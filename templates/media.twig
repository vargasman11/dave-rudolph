{% extends"_layout.twig" %}
{% block content %}
<div id="music"
     class="container flex flex-col justify-center items-center mx-auto mt-5 h-[200px] md:h-[300px] xl:h-[500px] bg-cover bg-center"
     style="background-image:url('{{ entry.headerImage.one().getUrl() ?? "/img/crowd-stock.jpeg" }}')">
    <p class="text-white text-3xl md:text-6xl xl:text-8xl">{{ entry.pageTitle ?? "MEDIA" }}</p>
</div>

<div class="container mx-auto mt-4 py-5">
    {% set blocks = entry.videos.all() %}
    {% if blocks|length %}
        {% for block in blocks %}
            <p class="text-center text-teal-600 text-2xl md:text-3xl xl:text-5xl py-2 mt-8">{{ block.videoTitle }}</p>
            <div class="flex justify-center m-4">
                {{ block.videoEmbed|raw }}
            </div>
        {% endfor %}
    {% endif %}
</div>

{% endblock %}