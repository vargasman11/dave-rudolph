{% set params = {
    videos: false
}|merge(params|default({})) %}

{% if params.videos.all()|length %}
    {% set blocks = params.videos.all() %}
    {% if blocks|length %}
        <div class="container mx-auto p-4">
            {% for block in blocks %}
                <div class="mx-auto my-4 md:my-8 lg:my-12 xl:my-16 lg:max-w-3xl xl:max-w-4xl">
                    <h1 class="text-center text-primary text-xl sm:text-2xl md:text-3xl lg:text-4xl py-3 font-xball">{{ block.videoTitle }}</h1>
                    <div class="[&_iframe]:aspect-video">
                        {{ block.videoEmbed|raw }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endif %}
