{% set params = {
    showForm: false
}|merge(params|default({})) %}

{% if params.showForm %}
    <div class="container mx-auto my-4 md:my-8 lg:my-12 px-4">
        {% set form = freeform.form("contact") %}
        {{ form.render({
            attributes: {
                novalidate: true,
                class: "w-full max-w-2xl mx-auto",
                id:"contact-form"
            },
            buttons: {
                attributes: {
                    submit: {
                        class: "w-full bg-primary hover:bg-secondary hover:cursor-pointer text-white font-semibold py-3 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                    },
                    back: {
                        class: "w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-3 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2"
                    },
                },
            },
            fields: {
                "@global": {
                    attributes: {
                        container: { class: "mb-6" },
                        label: {
                            class: "block text-sm font-medium text-gray-700 mb-2"
                        },
                        input: {
                            class: "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50"
                        },
                        instructions: {
                            class: "text-sm text-gray-500 mt-1"
                        },
                        errors: {
                            class: "text-sm text-red-600 mt-1"
                        },
                    },
                },
                ":required": {
                    attributes: {
                        label: { "+class": "after:content-['*'] after:ml-0.5 after:text-red-500" },
                    },
                },
                ":errors": {
                    attributes: {
                        input: { "+class": "border-red-500 focus:border-red-500 focus:ring-red-200" },
                    },
                },
                "@dropdown": {
                    attributes: {
                        input: {
                            "+class": "form-field-select fullwidth"
                        },
                    },
                },
                "@checkboxes, @radios": {
                    attributes: {
                        container: { class: "flex flex-col gap-2" },
                        input: {
                            "+class": "h-4 w-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
                        },
                        label: {
                            "+class": "ml-2 text-sm text-gray-700"
                        },
                    },
                },
            },
        }) }}
    </div>
{% endif %}
